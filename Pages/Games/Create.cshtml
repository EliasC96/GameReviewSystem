@page
@model GameReviewSystem.Pages.Games.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Game</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Game.Title" class="control-label"></label>
                <input asp-for="Game.Title" class="form-control" />
                <span asp-validation-for="Game.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Game.ReleaseDate" class="control-label"></label>
                <input asp-for="Game.ReleaseDate" class="form-control" />
                <span asp-validation-for="Game.ReleaseDate" class="text-danger"></span>
            </div>

            <!-- Checbox -->
            <div class="form-group">
                <label class="control-label">Platforms</label><br />
                @foreach (var platform in Model.Platforms)
                {
                    <div class="form-check">
                        <!-- Modify this line to bind to a List<int> -->
                        <input class="form-check-input" type="checkbox" name="SelectedPlatformIds" value="@platform.PlatformId" id="platform-@platform.PlatformId" />
                        <label class="form-check-label" for="platform-@platform.PlatformId">
                            @platform.Name
                        </label>
                    </div>
                }
                <span asp-validation-for="SelectedPlatformIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
